<webconfig>
  <class className="org.intermine.model.testmodel.Company">
    <fields>
      <fieldconfig fieldExpr="name"/>
      <fieldconfig fieldExpr="vatNumber"/>
      <fieldconfig fieldExpr="address.address"/>
    </fields>
    <longdisplayers>
      <displayer src="/model/companiesHouse.jsp"/>
    </longdisplayers>
  </class>

  <class className="org.intermine.model.testmodel.Employee">
    <fields>
      <fieldconfig fieldExpr="name"/>
      <fieldconfig fieldExpr="department.name"/>
      <fieldconfig fieldExpr="department.company.name"/>
      <fieldconfig fieldExpr="age"/>
    </fields>
    <longdisplayers>
      <displayer src="/model/employeeName.jsp"/>
    </longdisplayers>
  </class>

  <!-- exists to test that long displayers for base classes (in this case
       /model/managerName.jsp) show up in sub-classes and that longdisplayers
       can be overridden in base classes (Manager overrides Employee -->
  <class className="org.intermine.model.testmodel.Manager">
    <fields>
      <fieldconfig fieldExpr="name"/>
      <fieldconfig fieldExpr="seniority"/>
    </fields>
    <longdisplayers>
      <displayer src="/model/managerSeniority.jsp"/>
    </longdisplayers>
  </class>

  <class className="org.intermine.model.testmodel.Broke" fieldName="debt">
    <longdisplayers>
      <displayer src="/model/debtField.jsp"/>
    </longdisplayers>
  </class>

  <class className="org.intermine.model.testmodel.HasAddress" fieldName="address">
    <longdisplayers>
      <displayer src="/model/addressField.jsp"/>
    </longdisplayers>
  </class>

  <exporter id="employeeExporter" actionPath="/exportAction?type=employeeExporter"
            className="org.intermine.model.testmodel.web.EmployeeExporter"/>
</webconfig>

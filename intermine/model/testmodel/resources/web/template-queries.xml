<template-list>

  <template name="employeesFromCompanyAndDepartment"
            description="View all the employees that work within a certain department of the specified company"
            category="People">
    <query name="employeesFromCompanyAndDepartment" model="testmodel" view="Employee">
      <node path="Employee.department.company.name">
        <constraint op="=" value="CompanyA" editable="true" description="" 
                    identifier="Company.name"/>
      </node>
      <node path="Employee.department.name">
        <constraint op="LIKE" value="Department%" editable="true" description=""
                    identifier="Department.name"/>
      </node>
    </query>
  </template>
  
  <template name="employeesOfACertainAge"
            description="View all the employees of a certain age"
            category="People">
    <query name="employeesOfACertainAge" model="testmodel" view="Employee">
      <node path="Employee.age">
        <constraint op="&gt;" value="35" editable="true" description="First age constraint"
                    identifier="Employee.age.LESS_THAN.1"/>
        <constraint op="!=" value="55" editable="true" description="Second age constraint"
                    identifier="Employee.age.NOT_EQUALS.1"/>
      </node>
    </query>
  </template>
  
  <template name="employeesOverACertainAgeFromDepartmentA"
            description="View all the employees of a certain age"
            category="People">
    <query name="employeesOverACertainAgeFromDepartmentA" model="testmodel" view="Employee">
      <node path="Employee.age">
        <constraint op=">=" value="25" editable="true" description="Age constraint"
                    identifier="Employee.age.NOT_EQUALS.1"/>
      </node>
      <node path="Employee.department.name">
        <constraint op="=" value="DepartmentA" editable="false" description="" 
                    identifier="Employee.department.name"/>
      </node>
    </query>
  </template>

  <template name="employeeByName"
            description="View all the employees with certain name"
            category="People">
    <query name="employeeByName" model="testmodel" view="Employee">
      <node path="Employee.name">
        <constraint op="=" value="" editable="true" description="" identifier="Employee.name"/>
      </node>
    </query>
  </template>
  
</template-list>
